<div class="row">
  <div class="user-info col-lg-3 mb-3">
    <p class="py-3 pl-1" style="background-color: rgba(165, 143, 134, 0.2);"><strong>ユーザー情報</strong></p>
    <p>
      ユーザー名：
      <%= user.name %>
    </p>
    <p>
      登録日：
      <%= user.created_at.strftime("%Y/%m/%d") %>
    </p>
    <% if user == current_user %>
      <%= link_to 'ユーザー情報の編集', edit_user_path(user), class: "btn btn-secondary" %>
    <% end %>
  </div>
  <div class="user-posts col-lg-5 mb-3">
    <p class="py-3 pl-1" style="background-color: rgba(165, 143, 134, 0.2);">
      <strong>投稿</strong>
      （<%= total_posts_count %> 件）
    </p>
    <% posts.each do |post| %>
      <%= link_to post_path(post) do %>
        <div class="list-group-item list-group-item-action">
          <p>
            タイトル：
            <%= post.title %>
          </p>
          <p class="text-truncate">
            内容：
            <%= post.body %>
          </p>
          <p>
            投稿日：
            <%= post.created_at.strftime("%Y/%m/%d") %>
          </p>
        </div>
      <% end %>
    <% end %>
    <div class="mt-1">
      <%= paginate posts %>
    </div>
  </div>
  <div class="user-comments col-lg-4 mb-3">
    <p class="py-3 pl-1" style="background-color: rgba(165, 143, 134, 0.2);">
      <strong>コメント</strong>
      （<%= total_comments_count %> 件）
    </p>
    <% comments.each do |comment| %>
      <%= link_to admin_comment_path(comment) do %>
        <div class="list-group-item list-group-item-action text-truncate">
          <%= comment.body %>
        </div>
      <% end %>
    <% end %>
    <div class="mt-1">
      <%= paginate comments %>
    </div>
  </div>
</div>