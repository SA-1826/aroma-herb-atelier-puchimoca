
<div class="row">
  <div class="col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
    <div class="card">
      <div class="card-body">
        <h2 class="d-flex justify-content-center">ユーザー情報の編集</h2>
          <%= form_with model: @user do |f| %>
            <%= render 'layouts/error_messages', model: f.object %>
            <div class="form-group">
              <label for="user_name">ユーザー名</label>
              <%= f.text_field :name, class: "form-control user_name" %>
            </div>
            <% unless current_user.guest_user? %>
            <div class="form-group">
              <label for="user_email">メールアドレス</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control user_email" %>
            </div>
            <% end %>
            <div class="form-group">
              <%= f.submit '変更を保存する', class: "btn btn-secondary btn-block" %>
            </div>
          <% end %>
          <%= link_to '退会する', withdraw_user_path(@user), method: :patch, "data-confirm" => "本当に退会しますか？", class: "btn btn-outline-danger btn-block" %>
      </div>
    </div>
    <div class="text-center">
        <%= link_to 'マイページへ戻る', mypage_path, class: "btn btn-secondary mt-3" %>
      </div>
  </div>
</div>

