<div class="d-flex justify-content-center">
  <%= render 'public/searches/search_form' %>
</div>
<h1>コミュニティ</h1>
  <h3>投稿一覧</h3>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>タイトル</th>
          <th>投稿ユーザー</th>
          <th>投稿日時</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td>
              <%= link_to post_path(post) do %>
                <%= post.title %>
              <% end %>
            </td>
            <td>
              <%= link_to post_path(post) do %>
                <%= post.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to post_path(post) do %>
                <%= post.updated_at %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
