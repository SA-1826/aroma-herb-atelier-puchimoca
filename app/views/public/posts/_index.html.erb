<table class="table">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>投稿ユーザー</th>
      <th>コメント件数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user.name %></td>
        <td><%= post.comments.count %>件</td>
        <td><%= link_to '開く', post_path(post), class: "btn btn-secondary py-1" %></td>
      </tr>
    <% end %>
  </tbody>
</table>