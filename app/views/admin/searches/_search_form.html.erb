<% if admin_signed_in? %>
  <%= form_with url: admin_searches_path, method: :get, local: true do |f| %>
    <%= f.text_field :content %>
    <%= f.select :model, options_for_select({ "講座" => "program", "グループ" => "group", "ユーザー" => "user", "投稿" => "post", "コメント" => "comment" }) %>
    <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
    <%= f.submit '検索', class: "btn btn-outline-secondary py-1" %>
  <% end %>
<% end %>