<h1>カテゴリー</h1>

  <div class="row">
    <div class="col-md-3">
      <h4>カテゴリー新規登録</h4>
        <%= form_with model: @category do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <h5>カテゴリー名</h5>
          <%= f.text_field :name %>

          <%= f.submit '登録' %>
        <% end %>

        <%= link_to '削除', admin_category_path(@category), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    </div>

    <div class="books col-md-8 offset-md-1">
      <h4>カテゴリー一覧</h4>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>カテゴリー名</th>
            <th>登録日</th>
          </tr>
        </thead>
        <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td>
              <%= link_to admin_category_path(category) do %>
                <%= category.title %>
              <% end %>
            </td>
            <td>
              <%= link_to admin_category_path(category) do %>
                <%= category.created_at %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
