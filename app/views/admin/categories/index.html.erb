<h1 class="mb-3">カテゴリー</h1>

  <div class="row">
    <div class="col-lg-3 mb-3">
      <h4>カテゴリー新規登録</h4>
        <%= form_with model: [:admin, @category] do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <%= f.label :name, "カテゴリー名" %>
          <%= f.text_field :name %>

          <%= f.submit ' 登録 ', class: "btn btn-secondary mt-lg-3" %>
        <% end %>
    </div>

    <%= render 'categories_index', categories: @categories %>
  </div>
