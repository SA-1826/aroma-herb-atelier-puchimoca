<h1>カテゴリー</h1>

  <div class="row">
    <div class="col-lg-3 mb-3">
      <h4>カテゴリー新規登録</h4>
        <%= form_with model: [:admin, @category] do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <%= f.label :name, "カテゴリー名" %>
          <%= f.text_field :name %>

          <%= f.submit '登録', class: "btn btn-secondary mt-lg-3" %>
        <% end %>
    </div>

    <div class="books col-lg-8 offset-lg-1">
      <h4>カテゴリー一覧</h4>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>カテゴリー名</th>
            <th>登録日</th>
            <th> </th>
          </tr>
        </thead>
        <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td>
              <%= link_to admin_category_path(category) do %>
                <%= category.name %>
              <% end %>
            </td>
            <td>
              <%= category.created_at %>
            </td>
            <td>
              <%= link_to '削除', admin_category_path(category), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-dark" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
