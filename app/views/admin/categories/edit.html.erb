<h1>カテゴリー</h1>

  <div class="row">
    <div class="col-lg-3 mb-3">
      <h4>カテゴリー編集</h4>
        <%= form_with model: [:admin, @category] do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <%= f.label :name, "カテゴリー名" %>
          <%= f.text_field :name %>

          <%= f.submit '変更を保存', class: "btn btn-secondary mt-lg-3" %>
        <% end %>
        <%= link_to '戻る', admin_categories_path, class: "btn btn-secondary mt-lg-3" %>
    </div>

    <%= render 'categories_index', categories: @categories %>
  </div>
