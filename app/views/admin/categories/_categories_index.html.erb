<div class="books col-lg-8 offset-lg-1">
  <h4>カテゴリー一覧</h4>
  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th>カテゴリー名</th>
        <th>登録日</th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
    <% categories.each do |category| %>
      <tr>
        <td>
          <%= link_to edit_admin_category_path(category) do %>
            <%= category.name %>
          <% end %>
        </td>
        <td>
          
        </td>
        <td>
          <%= link_to '削除', admin_category_path(category), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-dark" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>