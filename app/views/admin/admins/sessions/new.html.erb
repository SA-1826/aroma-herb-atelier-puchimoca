<div class="row">
  <div class="col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
    <div class="card">
      <div class="card-body">
        <h2 class="d-flex justify-content-center">管理者ログイン</h2>

        <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
          <div class="field mb-2">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control email" %>
          </div>
          <div class="field mb-2">
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control password" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "ログインを記憶する" %>
            </div>
          <% end %>
          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-secondary btn-block" %>
          </div>
        <% end %>

        <%= render "admin/admins/shared/links" %>
      </div>
    </div>
  </div>
</div>
